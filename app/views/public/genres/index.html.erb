<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: genres_path do |f| %>

<%= f.label :ジャンル名 %>
<%= f.text_field :name %>

<%= f.submit "新規登録" %>

<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <th><%= genre.name %></th>
      <%= link_to "編集する", edit_genre_path(genre.id) %>
    </tr>
    <% end %>
  </tbody>
</table>