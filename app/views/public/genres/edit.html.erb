<div class="container">
  <div class="row my-4">
    <h2 class="col-lg-3 mb-5 offset-3">ジャンル編集</h2>
  </div>

  <%= form_with model: @genre, url: genre_path, method: :patch do |f| %>
  <div class="row my-3">
    <div class="col-lg-2 offset-3"><%= f.label :ジャンル名 %></div>
    <div class="col-lg-3"><%= f.text_field :name %></div>
  </div>
  <div class="row my-4">
    <div class="col-lg-4 mt-5 offset-5"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
  </div>
  <% end %>
</div>








