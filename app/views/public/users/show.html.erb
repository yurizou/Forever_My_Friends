<div class="container">
  <div class="row my-4">
    <h2 class="col-2 mb-5 offset-3">My情報</h2>
    <div class="col-2 mb-5"><%= link_to "編集", users_edit_path, class: "btn btn-success" %></div>
  </div>
  <div class="row my-3">
    <div class="col-lg7 offset-3">
      <table class="table">
        <tbody>
          <tr>
            <th>氏名</th>
            <th><%= @user.last_name + @user.first_name %></th>
          </tr>
          <tr>
          <th>カナ</th>
          <th><%= @user.last_name_kana + @user.first_name_kana %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @user.email %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>



