<div class="container">
  <div class="row my-4">
    <h2 class="col-3  offset-2 mb-5">My情報編集</h2>
    <div class="col-3 mb-5"><%= link_to "退会する", users_confirm_path, class: "p-2 mb-1 bg-primary text-white rounded" %></div>
  </div>
  <%= form_with model: @user, url: users_info_path do |f| %>
  <div class="row my-3 justify-content-center">
    <div class="col-2"><%= f.label :氏名 %></div>
    <div class="col-3 md-5"><%= f.text_field :last_name %></div>
    <div class="col-3 md-5"> <%= f.text_field :first_name %></div>
  </div>
  
  <div class="row my-3 justify-content-center">
    <div class="col-2"><%= f.label :フリガナ %></div>
    <div class="col-3 md-5"><%= f.text_field :last_name_kana %></div>
    <div class="col-3 md-5"><%= f.text_field :first_name_kana %></div>
  </div>
  
  <div class="row my-3">
    <div class="col-2 offset-2"><%= f.label :メールアドレス %></div>
    <div class="col-3 md-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
   
  <div class="row my-3">
    <div class="col-2 offset-2"><%= f.label :電話番号 %></div>
    <div class="col-3 md-5"><%= f.text_field :telephone_number %></div>
  </div>
  
  <div class="row my-5">
    <div class="col-4 offset-5"><%= f.submit :編集内容を保存,  class: "btn btn-success"  %></div>
  </div>
  </div>


 



<% end %>
</div>



 
 
 