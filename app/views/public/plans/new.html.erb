<%= form_with model: @plan, url: plans_path do |f| %>

  <%= f.collection_check_boxes(:friend_ids, @friends, :id, :last_name) do |b| %>
  <%= b.label { b.check_box } %>

     <% if b.object.image.attached? %>
      <%= image_tag b.object.image, size: "50x50" %>
     <% else %>
      <%= image_tag 'no_image', size:"50x50" %>
     <% end %>
      <%= b.object.nickname %>
     <% end %>

  <%= f.label :タイトル %>
