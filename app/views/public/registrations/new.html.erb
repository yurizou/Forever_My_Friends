<div class="container">
  <h2 class="col-3 my-4">新規登録</h2>
  <%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-2"><%= f.label :名前 %></div>
    <div class="col-1"><%= f.label :（姓）%></div>
    <div class="col-2"><%= f.text_field :last_name, placeholder: "令和" %></div>
    <div class="col-1"><%= f.label :（名） %></div>
    <div class="col-2"><%= f.text_field :first_name, placeholder: "太郎" %></div>
  </div>
  
   <div class="row my-3">
    <div class="col-2"><%= f.label :フリガナ %></div>
    <div class="col-1"><%= f.label :（セイ）%></div>
    <div class="col-2"><%= f.text_field :last_name_kana, placeholder: "レイワ" %></div>
    <div class="col-1"><%= f.label :（メイ） %></div>
    <div class="col-2"><%= f.text_field :first_name_kana, placeholder: "タロウ" %></div>
  </div>
  
  <div class="row my-3">
    <div class="col-3"><%= f.label :メールアドレス %></div>
    <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></div>
  </div>
  
  <div class="row my-3">
    <div class="col-3"><%= f.label :電話番号（ハイフン無） %></div>
    <div class="col-3"><%= f.text_field :telephone_number, placeholder: "0000000000" %></div>
  </div>
   
  <div class="row my-3">
    <div class="col-3"><%= f.label :パスワード %></div>
    <div class="col-5">
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
  </div>
  
  <div class="row my-3">
    <div class="col-3"><%= f.label :パスワード（確認） %></div>
    <div class="col-4"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>
  
  <div class="row my-3">
    <div class="col-3"></div>
    <div class="col-4 center-block text-light"><%= f.submit "新規登録", class: "btn btn-primary" %></div>
  </div>
  <% end %>
  
  <div class="row my-3">
    <p class="col-2.5 border border-text">既に登録済の方</p>
  </div>
  
  <div class="row my-3">
    <p class="col-5"><%= link_to 'こちら', new_user_session_path %>からログインしてください</p>
  </div>
</div>



 

 