<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.label :（姓）%>
    <%= f.text_field :last_name, placeholder: "令和" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, placeholder: "太郎" %>
  </div>
  
   <div class="field">
    <%= f.label :フリガナ %>
    <%= f.label :（セイ）%>
    <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, placeholder: "タロウ" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号（ハイフン無） %>
    <%= f.text_field :telephone_number, placeholder: "0000000000" %>
  </div>
  

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :パスワード（確認） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済の方</h2>
<p><%= link_to 'こちら', new_user_session_path %>からログインしてください</p>
