<div class="container">
  <div class="row my-4">
    <h2 class="col-4 mb-5">フレンド一覧</h2>
    <p class="col-3">フレンド<%= @friends.count %>人
    <span>
      <%= link_to new_friend_path do %>
        <i class="fa-solid fa-user-plus"></i>
      <% end %>
    </span>
    <style>
      /*色を変えたい.i { color: $green; } */
    </style>
    </p>
  </div>
  
  <div class="row my-3 justify-content-center">
    <% @friends.each do |friend| %>
      <%= link_to (friend_path(friend.id)) do %>
      <div class="col-3 my-2">
         <% if friend.image.attached? %>
         <%= image_tag friend.image, size: "50x50" %>
         <% else %>
         <%= image_tag 'no_image', size:"50x50" %>
         <% end %>
      </div>
      <div class="col-3 my-2">
         <%= friend.nickname %>
         <% end %>
         <% end %>
      </div>
     </div>
  
 
  </div>
  

