<h2>フレンド詳細</h2>

<%= link_to "編集", edit_friend_path %>
 <!--<p>会った回数<%#= @status.count %>回</p>-->
<table>
  <tr>
    <th>
      <% if @friend.image.attached? %>
      <%= image_tag @friend.image, size: "50x50" %>
      <% else %>
      <%= image_tag 'no_image', size:"50x50" %>
      <% end %>
    </th>
  </tr>

  <tr>
    <th>氏名</th>
    <th><%= @friend.last_name + @friend.first_name %></th>
  </tr>

  <tr>
    <th>カナ</th>
    <th><%= @friend.last_name_kana + @friend.first_name_kana %></th>
  </tr>

  <tr>
    <th>ニックネーム</th>
    <th><%= @friend.nickname %></th>
  </tr>

  <tr>
    <th>性別</th>
    <th><%= @friend.gender %></th>
  </tr>

  <tr>
    <th>誕生日</th>
    <th><%= @friend.birthday %></th>
  </tr>

  <tr>
    <th>カテゴリ</th>
    <th><%= @friend.genre.name %></th>
  </tr>


</table>