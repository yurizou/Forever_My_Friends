<!DOCTYPE html>
<html>
  <head>
    <title>ForeverMyFriends</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/xxxxxxxxxx.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-2">
            <%= link_to "ロゴ", root_path, class: "text-danger" %>
          </div>
          <div class="col-md-6">ようこそ、<%= current_user.last_name %>さん！</div>
          <div class="col-md-4">
            <div class="search-form">
              <%= form_with url: search_path, local: true, method: :get do |f| %>
              <%= f.text_field :word %>
              <%#= f.select :range, options_for_select([['Friend'], ['Plan']]) %>
              <%#= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
              <%= f.submit "検索", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
     　　 </div>
     　　    <% elsif admin_signed_in? %>
         <div class="row">
           <div class="col-md-2">
            <%= link_to "ロゴ", root_path, class: "text-danger" %>
           </div>
         </div>
            <% else %>
         <div class="row">
           <div class="col-md-2">
             <%= link_to "ロゴ", root_path, class: "text-danger" %>
           </div>
          </div>
            <% end %>
    　</div>
     </header>
           <%= yield %>
     <footer>
      <% if user_signed_in? %>
      <div class="container">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-2"><%= link_to "My情報", users_my_page_path %></div>
          <div class="col-md-2"><%= link_to "フレンドリスト", friends_path %></div>
          <div class="col-md-2"><%= link_to "友人カテゴリ", genres_path %></div>
          <div class="col-md-2"><%= link_to "スケジュール",  plans_path %></div>
          <div class="col-md-2"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></div>
          <div class="col-md-1"></div>
        </div>
      <% elsif admin_signed_in? %>
        <div class="row">
          <div class="col-md-7"></div>
          <div class="col-md-2"><%= link_to "トピック管理", admin_topics_path %></div>
          <div class="col-md-2"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></div>
          <div class="col-md-1"></div>
        </div>
      <% else %>
        <div class="row">
          <div class=col-md-7></div>
          <div class="col-md-2"><%= link_to "新規登録", new_user_registration_path %></div>
          <div class="col-md-2"><%= link_to "ログイン", new_user_session_path %></div>
        </div>
      <% end %>
      </div>
   </footer>
  </body>
</html>
